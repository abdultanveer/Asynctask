<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory
            android:title="Flight Preferences">
            <CheckBoxPreference
                android:title="Wake for meals"
                android:key="meals"
             />
            <EditTextPreference
                android:title="Favorite city"
                android:key="fav_city"
                android:defaultValue="London"
                />
            <SwitchPreference
                android:defaultValue="false"
                android:title="Switch title"
                android:key="switch"
                android:summary="switch sumary" />
            <ListPreference
                android:defaultValue="-1"
                android:key="add_friends_key"
                android:entries="@array/pref_example_list_titles"
                android:entryValues="@array/pref_example_list_titles"
                android:title="add friends to messages" />


        </PreferenceCategory>
</PreferenceScreen>